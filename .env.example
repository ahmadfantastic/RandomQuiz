# Copy this file to `.env` and adjust values as needed for your environment.

# Django core settings
DJANGO_SECRET_KEY=dev-secret-key
DJANGO_DEBUG=True

# Database engine selection (sqlite,mysql,postgresql). Defaults to sqlite.
DJANGO_DB_ENGINE=sqlite

# SQLite: leave the rest unset to use `backend/db.sqlite3`, or set a custom path:
# DJANGO_DB_NAME=backend/db.sqlite3

# PostgreSQL example
# DJANGO_DB_ENGINE=postgresql
# DJANGO_DB_NAME=randomquiz
# DJANGO_DB_USER=postgres
# DJANGO_DB_PASSWORD=supersecret
# DJANGO_DB_HOST=localhost
# DJANGO_DB_PORT=5432

# MySQL example
# DJANGO_DB_ENGINE=mysql
# DJANGO_DB_NAME=randomquiz
# DJANGO_DB_USER=root
# DJANGO_DB_PASSWORD=secret
# DJANGO_DB_HOST=localhost
# DJANGO_DB_PORT=3306
